<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_item_contact"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/contact"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_item_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_item_contact"/>

    <TextView
        android:id="@+id/tv_item_contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0978.654.321"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@id/img_item_contact"
        app:layout_constraintLeft_toRightOf="@id/img_item_contact"/>


</androidx.constraintlayout.widget.ConstraintLayout>